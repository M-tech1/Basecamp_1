<%# <h1>Users#edit</h1>
<p>Find me in app/views/users/edit.html.erb</p> %>



<div class="container-xl">
<div class="table-responsive">
    <div class="table-wrapper">
        <div class="table-title">
            <div class="row">
                <div class="col-sm-5">
                    <h2> <b>Add User </b></h2>
                </div>                    
            </div>
        </div>
        <div class="signup-form"> 
        <% if flash[:notice] %>  
          <div class="alert alert-success"><%= flash[:notice] %></div>  
        <% end %> 

        <% if flash[:error] %>  
          <div class="alert alert-warning"><%= flash[:error] %></div>  
        <% end %>  

        <%= form_with scope: @user, url: user_path(@user), method: :patch, local: true do %>
        <p class="lead">Register a new user.</p>
        
        <div class="form-group">
          <div class="input-group">
            <input type="text" class="form-control" name="name" value="<%=@user.name%>"  required="required">
          </div>
        </div>
        <div class="form-group">
          <div class="input-group">
            <input type="email" class="form-control" name="email" value="<%=@user.email%>" required="required">
          </div>
        </div>

      <%# <div class="form-group">
        <div class="input-group">
          <input type="password" class="form-control" name="password" value="" required="required">
        </div>
      </div> %>
      
      <div class="form-group">
      <select name="role" class="form-control">
       <option class="form-input" value="<%@user.role %>"> <%=@user.role %> </option>
       
        <% if @user.role == 'user' %>
          <option class="form-input" value="admin"> Admin </option>  
        <% else %>
          <option class="form-input" value="user">User </option>   
        <% end %>

       
        
      </select>
      </div>

      <%# <div class="form-group">
        <div class="input-group">
          <input type="password" class="form-control" name="confirm_password" placeholder="Confirm Password" required="required">
        </div>
      </div>      %>
                  
        <div class="form-group">
            <button type="submit" class="btn btn-primary btn-block btn-lg">Create</button>
        </div>
       <% end %> 
    </div>
</div>    
</div> 
