
<div class="container-xl">
    <div class="table-responsive">
        <div class="table-wrapper">
            <div class="table-title">
                <div class="row">
                    <div class="col-sm-5">
                        <h2><b>All Projects</b></h2>
                    </div>
                    <div class="col-sm-7">
                        <a href="<%= new_project_path %>" class="btn btn-secondary"><i class="material-icons">&#xE147;</i> <span>Add New Project</span></a>
                    </div>
                </div>
            </div>
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Name</th>                       
                        <th>Description</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                <% @projects.each_with_index do |project, k| %>
                    <tr>
                        <td> <%= k+1 %>  </td>
                        <td> <%= project.name %> </td>
                        <td> <%= project.description %> </td>                        
                        <td style="width: 140px">
                            <a href="#" class="edit" title="Edit" data-toggle="tooltip"><i class="material-icons">&#xE254;</i></a>
                            <a href="#" class="delete" title="Delete" data-toggle="tooltip"><i class="material-icons">&#xE872;</i></a>
                        </td>
                    </tr>  
                    <% end %>                  
                </tbody>
            </table>
            <div class="clearfix">
                <div class="hint-text">No. of entries</div>
                <ul class="pagination">
                    <li class="page-item disabled"><a href="#">Previous</a></li>
                    <li class="page-item active"><a href="#" class="page-link">1</a></li>
                    <li class="page-item"><a href="#" class="page-link">Next</a></li>
                </ul>
            </div>
        </div>
    </div>
</div>     

