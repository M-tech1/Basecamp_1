
<div class="container-xl">
    <div class="table-responsive">
        <div class="table-wrapper">
            <div class="table-title">
                <div class="row">
                    <div class="col-sm-5">
                        <h2> <b>New Project </b></h2>
                    </div>                    
                </div>
            </div>
            <div class="signup-form"> 
            <% if flash[:notice] %>  
            <div class="alert alert-success"><%= flash[:notice] %></div>  
                <% end %> 

                <% if flash[:error] %>  
                <div class="alert alert-warning"><%= flash[:error] %></div>  
                <% end %>  

            <%= form_with scope: @project, url: project_path, method: :patch, local: true do %>
            <h2>COLLABORATE</h2>
            <p class="lead">create a new project management tool for developers.</p>
            
                <div class="form-group">
            <div class="input-group">
                <input type="text" class="form-control" name="name" placeholder="Project Name" value="<%= @project.name %>" required="required">
            </div>
                </div>
            <div class="form-group">
            <div class="input-group">
            <textarea class="form-control" name="description" placeholder="Project Description" rows="5"><%= @project.description %> </textarea>   
            </div>
                </div>
                
            <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block btn-lg">Update</button>
            </div>
             <% end %>         
            
    </div>
</div>     
